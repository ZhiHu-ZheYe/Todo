<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white">
   <ListView android:id="@android:id/list"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
   </ListView>
   <LinearLayout android:id="@+id/LinearLayout01"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:orientation="horizontal">
	<Button android:text="@string/CategoryListButtonNew"
	 android:id="@+id/CategoryListButtonNew"
	 android:layout_width="wrap_content"
	 android:layout_height="wrap_content"
	 android:layout_weight="1">
	</Button>
	<Button android:text="@string/CategoryListButtonOK"
	 android:id="@+id/CategoryListButtonOK"
	 android:layout_width="wrap_content"
	 android:layout_height="wrap_content"
	 android:layout_weight="1">
	</Button>
	<Button android:text="@string/CategoryListButtonCancel"
	 android:id="@+id/CategoryListButtonCancel"
	 android:layout_width="wrap_content"
	 android:layout_height="wrap_content"
	 android:layout_weight="1">
	</Button>
    </LinearLayout>
</LinearLayout>
